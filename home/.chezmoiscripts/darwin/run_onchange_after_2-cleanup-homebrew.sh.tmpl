set -euo pipefail

echo "Cleaning up Homebrew..."

eval "$({{ joinPath .homebrewPrefix "bin" "brew" }} shellenv)" || true

# Remove unused dependencies
{{ joinPath .homebrewPrefix "bin" "brew" }} autoremove

# Clean up old versions and cached downloads
{{ joinPath .homebrewPrefix "bin" "brew" }} cleanup

